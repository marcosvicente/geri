<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>

<h1 class="center">Materials</h1>

<div class="row">
  <div class="col s6 push-s3">
    <table>
  <thead>
    <tr>
      <th>Material</th>
      <th>Quantidade</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @materials.each do |material| %>
      <tr>
        <td><%= material.name %></td>
        <td><%= material.quantify %></td>
        <td><%= link_to 'Ver Material', material %></td>
        <td><%= link_to 'Entrada de material', edit_material_path(material) %></td>
        <td><%= link_to 'Saida de material', edit_material_path(material) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
  </div>
</div>

<br>

<div class="row">
  <div class="col s3 push-s3">
    <%= link_to 'Novo Material', new_material_path, :class => "btn btn-inverse" %>
  </div>
</div>
